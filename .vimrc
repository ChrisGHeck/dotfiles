" Line numbering
set nu
set rnu

" Line breaking
set wrap
set linebreak
set showbreak=+++
set textwidth=100

" Searching
set hlsearch
set smartcase
set ignorecase
set incsearch

" Autoindent
set autoindent
set smartindent

" Hard tabs
set shiftwidth=4
set tabstop=4

" Soft tabs (spaces)
"set expandtab
"set shiftwidth=4
"set softtabstop=4

" Happy accident management
set undolevels=100
set backspace=indent,eol,start

" Misc
set ruler
set showmatch
set colorcolumn=80
set bg=dark
colo elflord
set noerrorbells
