
###---VARS---###
# Misc
set $mod Mod4
set $script ~/.scripts

# Workspace names
set $ws1 1
set $ws2 2
set $ws3 3
set $ws4 4
set $ws5 5
set $ws6 6
set $ws7 7
set $ws8 8
set $ws9 9
set $ws0 10

# Default Programs
set $launcher rofi -show run

# System Utilities
set $term urxvtc
set $editor urxvtc -e vim
set $fileman urxvtc -e ranger
set $taskmon urxvt -e htop

# Communication
set $irc urxvtc -e irssi
set $mail thunderbird
set $chat discord

# Misc. Apps
set $browser firefox
set $calendar urxvtc -e calcurse

###---PROGRAMS---###
