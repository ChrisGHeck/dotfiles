[color]
background = ${xrdb:color0:#222}
background-alt = ${xrdb:color2:#222}
background-transparent = #00000000
foreground = ${xrdb:color15:#222}
foreground-alt = #444
primary = #ffb52a
secondary = #e60053
alert = #bd2c40

[settings]
format-background = ${color.background}
format-padding = 2

[bar/main]
width = 100%
height = 27
fixed-center = true
bottom = false

background = ${color.background-transparent}
foreground = ${color.foreground}

overline-size = 2
underline-size = 0
line-color = #f00

padding-left = 0
padding-right = 0
module-margin = 1

font-0 = fixed:pixelsize=10;3
font-1 = fontawesome:pixelsize=10;3

modules-left = i3 
#modules-center = memory cpu temperature
modules-center = mpd
modules-right = volume battery network date

tray-position = right

scroll-up = i3-msg workspace next_on_output
scroll-down = i3-msg workspace prev_on_output

[module/date]
type = internal/date

format-overline = ${xrdb:color7:#222}

date = %a. %b. %d %Y
time = %I:%M:%S %p %Z
label = %date% at %time%

[module/volume]
